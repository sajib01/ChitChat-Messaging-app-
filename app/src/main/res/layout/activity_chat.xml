<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.sajib.chitchat.viewmodel.ChatViewmodel"></variable>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#198304"
            android:src="@drawable/avatar_2"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sajib"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/typing"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="typing"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:textSize="12sp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="online"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginRight="8dp"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/chattextdrawable"
            />
        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableStart="@drawable/clocation"
            android:layout_marginBottom="4dp"
            app:Click="@{viewmodel.LocationSend}"

            />
        <Button
            android:id="@+id/click"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/circlesendbutton"
            android:drawableStart="@drawable/send_button"
            android:layout_marginBottom="4dp"
            app:Click="@{viewmodel.Send}"

            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/one"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
</layout>